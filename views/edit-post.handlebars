<article class="no-underline">
  <b><a href="/dashboard" class="link dim gray dib mr3"> &larr; Back to dashboard</a></b>
  <h2>
    Edit Post
  </h2>

 <form class="edit-post-form pa3 bg-gray">
    <div class="black">
        <label for="post-title">Post Title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div class="pv2">
        <label for="post-content">post content:</label>
      <input class="textarea" name="post-content" type="text" value="{{post.content}}" />
    </div>
    <div class="is-pulled-right black">
       Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}" class=" link dim black dib mr3 no-underline">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
         <button type="submit" class="button is-success">Save post</button>
    <button type="button" class="delete-post-btn">Delete post</button>
  </form>

 
<b class="gray">{{> comments post.comments}}</b>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>