<article class="pa3">
  <a href="/dashboard" class="is-pulled-right link dim black dib mr3 gray"> &larr; Back to Dashboard</a>
  <h2 class="title mt-5">Edit post</h2><hr>
  <form class="edit-post-form">
    <div class="pv1">
        <label for="post-title">Post title:</label>
      <input class="input" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
        <label for="post-content">Post content:</label>
      <input class="textarea" name="post-content" type="text" value="{{post.content}}" />
    </div>
    <div class="is-pulled-right">
       Created by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}" class="no-underline gray link dim black dib mr3">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button is-success">save post</button>
    <button type="button" class="button is-danger delete-post-btn">delete post</button>
  </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
